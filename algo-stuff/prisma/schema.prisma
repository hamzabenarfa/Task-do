// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model OperationalHours {
  id           Int       @id @default(autoincrement())
  startingTime String
  endingTime   String

}



model Task {
  id          Int       @id @default(autoincrement())
  
  task        String
  priority    Int
  duration    Int
  context     String

  start_at    String    @default("")
  end_at      String    @default("")
}

model Appointment {
  id          Int       @id @default(autoincrement())

  task        String
  start_at    String    
  duration    Int
  context     String
  end_at      String    @default("")

}

// restults of the sorted schedule
model Schedule {
  id          Int       @id @default(autoincrement())

}
