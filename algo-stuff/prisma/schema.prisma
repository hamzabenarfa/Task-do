// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model OperationalHours {
  id           Int       @id @default(autoincrement())
  startingTime String
  endingTime   String
  createdAt    String @default("CURRENT_Date") @unique

}



model Task {
  id          Int       @id @default(autoincrement())
  task        String    
  priority    Int?
  duration    Int
  context     String
  start_at    String    @default("")
  end_at      String    @default("")
}

//get by today's date
//sort tasks
//post restults of the sorted schedule
model Schedule {
  id          Int       @id @default(autoincrement())
  task        String
  priority    Int
  duration    Int
  context     String
  start_at    String    
  end_at      String    

}
